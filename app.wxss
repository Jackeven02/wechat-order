/* app.wxss - 现代化设计系统 v2.0 */

/* ==================== 设计变量系统 ==================== */
page {
  /* 品牌主色系统 */
  --primary-color: #667eea;
  --primary-light: #8b9dff;
  --primary-dark: #4a5dcc;
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  
  /* 状态色系统 */
  --success-color: #28a745;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --info-color: #17a2b8;
  
  /* 中性色系统 */
  --text-primary: #1a202c;
  --text-secondary: #666666;
  --text-disabled: #999999;
  --bg-primary: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-tertiary: #f0f2f5;
  --border-color: #e0e0e0;
  --divider-color: #f0f0f0;
  
  /* 间距系统 (基于8px网格) */
  --spacing-xs: 4rpx;
  --spacing-sm: 8rpx;
  --spacing-md: 12rpx;
  --spacing-lg: 16rpx;
  --spacing-xl: 24rpx;
  --spacing-2xl: 32rpx;
  --spacing-3xl: 48rpx;
  
  /* 字体系统 */
  --font-size-display: 48rpx;
  --font-size-h1: 42rpx;
  --font-size-h2: 36rpx;
  --font-size-h3: 32rpx;
  --font-size-body-large: 30rpx;
  --font-size-body: 28rpx;
  --font-size-body-small: 24rpx;
  --font-size-caption: 20rpx;
  
  /* 字重系统 */
  --font-weight-regular: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* 阴影系统 */
  --shadow-1: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  --shadow-2: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  --shadow-3: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  --shadow-4: 0 12rpx 30rpx rgba(0, 0, 0, 0.15);
  --shadow-5: 0 16rpx 40rpx rgba(0, 0, 0, 0.18);
  
  /* 圆角系统 */
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 20rpx;
  --radius-full: 50%;
  
  /* 过渡动画 */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
}

/* ==================== 基础重置 ==================== */
page {
  background-color: var(--bg-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: var(--text-primary);
  font-size: var(--font-size-body);
  line-height: 1.5;
}

/* ==================== 通用组件类 ==================== */

/* 卡片基础样式 */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  border: 1rpx solid var(--border-color);
  box-shadow: var(--shadow-2);
  transition: all var(--transition-normal);
}

.card-hover:hover {
  box-shadow: var(--shadow-3);
  transform: translateY(-2rpx);
}

.card-press:active {
  transform: translateY(-1rpx);
  box-shadow: var(--shadow-2);
}

/* 标题样式 */
.title-h1 {
  font-size: var(--font-size-h1);
  font-weight: var(--font-weight-bold);
  line-height: 1.2;
  color: var(--text-primary);
}

.title-h2 {
  font-size: var(--font-size-h2);
  font-weight: var(--font-weight-bold);
  line-height: 1.2;
  color: var(--text-primary);
}

.title-h3 {
  font-size: var(--font-size-h3);
  font-weight: var(--font-weight-semibold);
  line-height: 1.2;
  color: var(--text-primary);
}

/* 按钮样式 */
.btn-primary {
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: var(--radius-full);
  padding: 16rpx 32rpx;
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-semibold);
  box-shadow: var(--shadow-2);
  transition: all var(--transition-normal);
}

.btn-primary:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: var(--shadow-3);
}

.btn-secondary {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-full);
  padding: 16rpx 32rpx;
  font-size: var(--font-size-body);
  font-weight: var(--font-weight-semibold);
  transition: all var(--transition-normal);
}

.btn-secondary:active {
  background: var(--divider-color);
  transform: translateY(1rpx);
}

/* 状态标签 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  font-size: var(--font-size-caption);
  border-radius: var(--radius-full);
  font-weight: var(--font-weight-medium);
}

.badge-primary {
  background: rgba(102, 126, 234, 0.1);
  color: var(--primary-color);
}

.badge-success {
  background: rgba(40, 167, 69, 0.1);
  color: var(--success-color);
}

.badge-danger {
  background: rgba(220, 53, 69, 0.1);
  color: var(--danger-color);
}

/* ==================== 布局工具类 ==================== */
.flex { display: flex; }
.flex-row { flex-direction: row; }
.flex-col { flex-direction: column; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; align-items: center; }
.flex-1 { flex: 1; }

/* 间距工具类 */
.mt-xs { margin-top: var(--spacing-xs); }
.mt-sm { margin-top: var(--spacing-sm); }
.mt-md { margin-top: var(--spacing-md); }
.mt-lg { margin-top: var(--spacing-lg); }
.mt-xl { margin-top: var(--spacing-xl); }
.mt-2xl { margin-top: var(--spacing-2xl); }

.mb-xs { margin-bottom: var(--spacing-xs); }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }
.mb-xl { margin-bottom: var(--spacing-xl); }
.mb-2xl { margin-bottom: var(--spacing-2xl); }

.px-sm { padding-left: var(--spacing-sm); padding-right: var(--spacing-sm); }
.px-md { padding-left: var(--spacing-md); padding-right: var(--spacing-md); }
.px-lg { padding-left: var(--spacing-lg); padding-right: var(--spacing-lg); }

.py-sm { padding-top: var(--spacing-sm); padding-bottom: var(--spacing-sm); }
.py-md { padding-top: var(--spacing-md); padding-bottom: var(--spacing-md); }
.py-lg { padding-top: var(--spacing-lg); padding-bottom: var(--spacing-lg); }

/* 文字样式 */
.text-primary { color: var(--text-primary); }
.text-secondary { color: var(--text-secondary); }
.text-disabled { color: var(--text-disabled); }

.text-caption { font-size: var(--font-size-caption); }
.text-body-small { font-size: var(--font-size-body-small); }
.text-body { font-size: var(--font-size-body); }
.text-body-large { font-size: var(--font-size-body-large); }

.font-regular { font-weight: var(--font-weight-regular); }
.font-medium { font-weight: var(--font-weight-medium); }
.font-semibold { font-weight: var(--font-weight-semibold); }
.font-bold { font-weight: var(--font-weight-bold); }

/* ==================== 动画效果 ==================== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.05);
  }
}

.animate-fade-in-up {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}