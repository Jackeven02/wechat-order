/* pages/cart/cart.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f9ff 0%, #eef2ff 100%);
  padding-bottom: 180rpx;
  position: relative;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 高清背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -150rpx;
  left: -150rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(118, 75, 162, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

/* 文字清晰度优化 */
text {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  padding: 60rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.8;
  filter: drop-shadow(0 10rpx 20rpx rgba(0,0,0,0.1));
  will-change: transform;
}

.empty-text {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 50rpx;
  font-weight: 400;
  line-height: 1.6;
}

.go-menu-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 30rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  letter-spacing: 1rpx;
}

.go-menu-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 15rpx rgba(102, 126, 234, 0.4);
}

/* 购物车内容 */
.cart-content {
  padding: 30rpx;
  position: relative;
  z-index: 1;
}

/* 桌台信息卡片 */
.table-info-card {
  background: white;
  border-radius: 25rpx;
  padding: 15rpx 35rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.table-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.table-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}

.table-info-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.table-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.table-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  margin-right: 10rpx;
}

.table-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  margin-right: 20rpx;
}

.table-status {
  flex-shrink: 0;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  display: inline-block;
  line-height: 1.2;
}

.status-green {
  background: #e8f5e8;
  color: #27ae60;
  border: 2rpx solid #27ae60;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  display: inline-block;
  box-shadow: 0 2rpx 6rpx rgba(39, 174, 96, 0.15);
  font-size: 22rpx;
  font-weight: 500;
}

.status-orange {
  background: #fef9e7;
  color: #f39c12;
  border: 2rpx solid #f39c12;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  display: inline-block;
  box-shadow: 0 2rpx 6rpx rgba(243, 156, 18, 0.15);
  font-size: 22rpx;
  font-weight: 500;
}

/* 未绑定桌台提示 */
.no-table-tip {
  background: #fffbeb;
  border: 1rpx solid #fcd34d;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(252, 211, 77, 0.2);
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: #92400e;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.bind-table-btn {
  background: #f59e0b;
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 35rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 15rpx rgba(245, 158, 11, 0.3);
}

.bind-table-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 3rpx 10rpx rgba(245, 158, 11, 0.4);
}

/* 购物车列表 */
.cart-list {
  background: white;
  border-radius: 25rpx;
  overflow: hidden;
  box-shadow: 0 15rpx 35rpx rgba(0,0,0,0.08);
  border: 1rpx solid #f8f9fa;
  position: relative;
  margin-bottom: 25rpx;
}

.cart-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

/* 全选区域 */
.select-all {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 35rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafbff;
}

.left-controls {
  display: flex;
  align-items: center;
}

.right-controls {
  display: flex;
  align-items: center;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #ccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  transition: all 0.2s ease;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
  z-index: 10;
}

.checkbox.checked {
  background: #667eea;
  border-color: #667eea;
  transform: scale(1.1);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.checkmark {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.select-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.clear-btn {
  background: #ff6b6b;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
  padding: 12rpx 25rpx;
  border: none;
  border-radius: 20rpx;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.clear-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

/* 购物车商品项 */
.cart-items {
  padding: 0 30rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: all 0.2s ease;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 商品图片 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin: 0 20rpx;
  flex-shrink: 0;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.2s ease;
}

.dish-img {
  width: 100%;
  height: 100%;
  will-change: transform;
}

/* 商品内容区域 */
.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 20rpx;
}

/* 商品信息 */
.item-info {
  margin-bottom: 20rpx;
}

.dish-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-price {
  display: block;
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: 700;
}

/* 操作区域 */
.item-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.05);
  background: white;
}

.qty-btn {
  width: 55rpx;
  height: 55rpx;
  background: white;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.1s ease;
}

.qty-btn:active {
  background: #f8f9ff;
  color: #4a5fc9;
}

.qty-btn.minus {
  border-right: 1rpx solid #e0e0e0;
}

.qty-btn.plus {
  border-left: 1rpx solid #e0e0e0;
}

.qty-num {
  min-width: 55rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  padding: 0 12rpx;
}

/* 删除按钮 */
.delete-btn {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
  background: #ff6b6b;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.delete-btn:active {
  transform: scale(1.1);
  box-shadow: 0 6rpx 15rpx rgba(255, 107, 107, 0.4);
}

.delete-icon {
  color: white;
  font-size: 30rpx;
  font-weight: bold;
}

/* 备注区域 */
.remark-section {
  padding: 15rpx 20rpx;
  background: #f8f9ff;
  border-radius: 12rpx;
  border: 1rpx dashed #667eea;
  transition: all 0.2s ease;
  text-align: center;
}

.remark-section:active {
  background: #eef2ff;
  border-style: solid;
  transform: scale(1.02);
}

.remark-text {
  font-size: 26rpx;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.remark-text.has-remark {
  color: #667eea;
  font-weight: 500;
}

.remark-text.no-remark {
  color: #95a5a6;
  font-style: italic;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 25rpx 35rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.1);
  z-index: 100;
  border-radius: 25rpx 25rpx 0 0;
}

.checkout-info {
  flex: 1;
}

.total-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.total-amount {
  font-size: 38rpx;
  font-weight: 800;
  color: #e74c3c;
  margin-left: 10rpx;
}

.selected-count {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 400;
}

.checkout-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  min-width: 200rpx;
  text-align: center;
  box-shadow: 0 10rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
  letter-spacing: 1rpx;
}

.checkout-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.checkout-btn.disabled {
  background: #bdc3c7;
  opacity: 0.7;
  box-shadow: 0 5rpx 15rpx rgba(189, 195, 199, 0.3);
  transform: none !important;
}

/* 备注弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 35rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafbff;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-body {
  padding: 35rpx;
}

.remark-input {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #333;
  background: #fafbff;
  box-sizing: border-box;
}

.remark-input:focus {
  border-color: #667eea;
  outline: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 15rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  min-width: 120rpx;
}

.modal-btn.confirm {
  background: #667eea;
  color: white;
  border-radius: 0 0 20rpx 20rpx;
}

.modal-btn:active {
  opacity: 0.8;
}

/* 调试图标 - 确保选择框可见 */
.checkbox::before {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 1rpx solid #ff0000;
  border-radius: 12rpx;
  pointer-events: none;
  display: none;
}

