/* pages/cart/cart.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
  padding-bottom: 150rpx; /* 为底部结算栏留空间 */
  position: relative;
  overflow-x: hidden;
}

/* 装饰性背景 */
.container::before {
  content: '';
  position: absolute;
  top: -200rpx;
  right: -200rpx;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(102, 126, 234, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -300rpx;
  left: -300rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(118, 75, 162, 0.08) 0%, transparent 70%);
  border-radius: 50%;
  z-index: 0;
}

/* 空购物车状态 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  padding: 50rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 50rpx;
  opacity: 0.7;
  filter: grayscale(30%);
  animation: float 4s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.empty-text {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 25rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.empty-subtext {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 60rpx;
  font-weight: 400;
  line-height: 1.6;
}

.go-menu-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 70rpx;
  font-size: 34rpx;
  font-weight: 600;
  box-shadow: 0 15rpx 35rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.go-menu-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.go-menu-btn:hover::before {
  left: 100%;
}

.go-menu-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.4);
}

/* 购物车内容 */
.cart-content {
  padding: 30rpx;
  position: relative;
  z-index: 1;
}

/* 桌台信息卡片 */
.table-info-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 15rpx 35rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s ease;
}

.table-info-card:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 20rpx 45rpx rgba(0,0,0,0.12);
}

.table-header {
  display: flex;
  align-items: center;
}

.table-label {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.table-number {
  font-size: 38rpx;
  font-weight: 700;
  color: #667eea;
  margin-left: 15rpx;
}

.table-status .status-text {
  font-size: 26rpx;
  padding: 12rpx 25rpx;
  border-radius: 25rpx;
  font-weight: 500;
}

.status-green {
  background: rgba(40, 167, 69, 0.15);
  color: #28a745;
}

.status-orange {
  background: rgba(253, 126, 20, 0.15);
  color: #fd7e14;
}

/* 未绑定桌台提示 */
.no-table-tip {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
  border: 1rpx solid #ffd700;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 25rpx rgba(255, 215, 0, 0.2);
}

.tip-text {
  display: block;
  font-size: 28rpx;
  color: #856404;
  margin-bottom: 25rpx;
  font-weight: 500;
}

.bind-table-btn {
  background: linear-gradient(135deg, #ffc107 0%, #ffa000 100%);
  color: #212529;
  border: none;
  border-radius: 35rpx;
  padding: 20rpx 45rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(255, 193, 7, 0.3);
  transition: all 0.2s ease;
}

.bind-table-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.4);
}

/* 购物车列表 */
.cart-list {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 15rpx 35rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
}

.cart-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
  background-size: 200% 100%;
  animation: gradientMove 3s ease infinite;
}

@keyframes gradientMove {
  0% { background-position: 0% 50%; }
  100% { background-position: 200% 50%; }
}

/* 全选区域 */
.select-all {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.5);
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.checkbox-container {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  margin-right: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  transform: scale(1.1);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
}

.checkmark {
  color: white;
  font-size: 26rpx;
  font-weight: bold;
}

.select-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.clear-btn {
  background: transparent;
  color: #ff6b35;
  font-size: 28rpx;
  font-weight: 500;
  padding: 12rpx 25rpx;
  border: none;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.clear-btn:active {
  background: rgba(255, 107, 53, 0.1);
}

/* 购物车商品项 */
.cart-items {
  padding: 0 40rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 35rpx 0;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.6);
  position: relative;
  transition: all 0.3s ease;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item:active {
  background: rgba(102, 126, 234, 0.03);
}

/* 商品图片 */
.item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 30rpx;
  flex-shrink: 0;
  box-shadow: 0 10rpx 25rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.cart-item:active .item-image {
  transform: scale(1.05);
}

.dish-img {
  width: 100%;
  height: 100%;
  transition: transform 0.5s ease;
}

.item-image:hover .dish-img {
  transform: scale(1.1);
}

/* 商品信息 */
.item-info {
  flex: 1;
  min-width: 0;
  padding-right: 20rpx;
}

.dish-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 18rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-price {
  display: block;
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: 700;
  margin-bottom: 25rpx;
  text-shadow: 0 1rpx 2rpx rgba(255, 107, 53, 0.2);
}

/* 备注区域 */
.remark-section {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 15rpx;
  border: 1rpx dashed rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.remark-section:active {
  background: rgba(102, 126, 234, 0.1);
  border-style: solid;
}

.remark-label {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
  margin-right: 12rpx;
}

.remark-text {
  font-size: 26rpx;
  font-weight: 400;
}

.remark-text.has-remark {
  color: #667eea;
  font-weight: 500;
}

.remark-text.no-remark {
  color: #aaa;
  font-style: italic;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  transition: all 0.2s ease;
}

.quantity-control:active {
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  transform: scale(1.05);
}

.qty-btn {
  width: 70rpx;
  height: 70rpx;
  background: white;
  border: none;
  font-size: 40rpx;
  font-weight: bold;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.qty-btn:active {
  background: #f5f5f5;
  color: #333;
}

.qty-btn.minus {
  border-right: 1rpx solid #e0e0e0;
}

.qty-btn.plus {
  border-left: 1rpx solid #e0e0e0;
}

.qty-num {
  min-width: 70rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  padding: 0 15rpx;
}

/* 删除按钮 */
.delete-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.delete-btn:active {
  background: rgba(255, 71, 87, 0.1);
  transform: scale(1.1);
}

.delete-icon {
  color: #ccc;
  font-size: 40rpx;
  transition: all 0.2s ease;
}

.delete-btn:active .delete-icon {
  color: #ff4757;
  transform: rotate(90deg);
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 25rpx 40rpx;
  border-top: 1rpx solid rgba(102, 126, 234, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -15rpx 40rpx rgba(0,0,0,0.1);
  z-index: 100;
  border-radius: 30rpx 30rpx 0 0;
}

.checkout-info {
  flex: 1;
}

.total-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.total-amount {
  font-size: 42rpx;
  font-weight: 800;
  color: #ff6b35;
  margin-left: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 107, 53, 0.2);
}

.selected-count {
  font-size: 26rpx;
  color: #888;
  font-weight: 400;
}

.checkout-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 34rpx;
  font-weight: 700;
  min-width: 220rpx;
  text-align: center;
  box-shadow: 0 10rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.checkout-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.checkout-btn.disabled {
  background: linear-gradient(135deg, #cccccc 0%, #aaaaaa 100%);
  opacity: 0.6;
  box-shadow: 0 5rpx 15rpx rgba(204, 204, 204, 0.3);
  transform: none !important;
}

/* 备注弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 30rpx;
  width: 85%;
  max-width: 650rpx;
  overflow: hidden;
  box-shadow: 0 30rpx 60rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.9);
  animation: modalScaleIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes modalScaleIn {
  to { transform: scale(1); }
}

.modal-header {
  padding: 50rpx 40rpx 25rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(238, 238, 238, 0.5);
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
}

.modal-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #333;
}

.modal-body {
  padding: 50rpx 40rpx;
}

.remark-input {
  width: 100%;
  height: 220rpx;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #333;
  background: rgba(248, 249, 255, 0.5);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.remark-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
  outline: none;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 26rpx;
  color: #888;
  margin-top: 20rpx;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid rgba(238, 238, 238, 0.5);
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 0;
  transition: all 0.2s ease;
}

.modal-btn:active {
  transform: scale(0.98);
}

.modal-btn.cancel {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}