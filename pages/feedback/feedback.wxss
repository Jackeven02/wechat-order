/* pages/feedback/feedback.wxss */
.container {
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
  min-height: 100vh;
  padding: 30rpx;
}

.type-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.type-item {
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, #e0e4ff 0%, #d0d8ff 100%);
  transform: scale(1.05);
  box-shadow: 0 10rpx 25rpx rgba(102, 126, 234, 0.3);
}

.type-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
  display: block;
}

.type-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.contact-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
}

.contact-input {
  width: 100%;
  height: 80rpx;
  background: #f8f9ff;
  border: 1rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.contact-input:focus {
  border-color: #667eea;
  outline: none;
}

.content-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
}

.content-textarea {
  width: 100%;
  height: 250rpx;
  background: #f8f9ff;
  border: 1rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  resize: none;
}

.content-textarea:focus {
  border-color: #667eea;
  outline: none;
}

.image-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 150rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
}

.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.uploaded-image {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1);
}

.image-preview {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 71, 87, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.delete-btn:active {
  background: rgba(255, 71, 87, 1);
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.1);
  border-top: 1rpx solid #eee;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.submit-btn:disabled {
  background: #cccccc;
  box-shadow: none;
  transform: none;
}