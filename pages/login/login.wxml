<!-- pages/login/login.wxml -->
<view class="container">
  <view class="login-card">
    <!-- Logo区域 -->
    <view class="logo-section">
      <image class="logo" src="https://picsum.photos/120/120?random=18" mode="aspectFit"></image>
      <text class="app-name">智慧餐厅</text>
      <text class="app-slogan">便捷的用餐体验</text>
    </view>

    <!-- 登录按钮区域 -->
    <view class="login-section">
      <button 
        class="login-btn wechat-login" 
        bindtap="onWechatLogin"
        loading="{{isLoggingIn}}"
        disabled="{{isLoggingIn}}">
        <image class="btn-icon" src="https://picsum.photos/30/30?random=19"></image>
        <text class="btn-text">{{loginStep === 0 ? '微信快捷登录' : loginStep === 1 ? '获取登录凭证...' : '登录中...'}}</text>
      </button>

      <view class="divider">
        <text class="divider-text">或</text>
      </view>

      <button class="login-btn guest-login" bindtap="onGuestMode">
        <text class="btn-text">游客模式浏览</text>
      </button>
    </view>

    <!-- 功能说明 -->
    <view class="features-section">
      <view class="feature-item">
        <image class="feature-icon" src="https://picsum.photos/25/25?random=20"></image>
        <text class="feature-text">扫码点餐，无需排队</text>
      </view>
      <view class="feature-item">
        <image class="feature-icon" src="https://picsum.photos/25/25?random=20"></image>
        <text class="feature-text">会员专享优惠活动</text>
      </view>
      <view class="feature-item">
        <image class="feature-icon" src="https://picsum.photos/25/25?random=20"></image>
        <text class="feature-text">订单实时跟踪</text>
      </view>
    </view>

    <!-- 隐私协议 -->
    <view class="privacy-section">
      <text class="privacy-text">登录即表示您同意</text>
      <text class="privacy-link" bindtap="onPrivacyPolicy">《隐私政策》</text>
    </view>
  </view>
</view>