/* pages/login/login.wxss */
.container {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰元素 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 30s linear infinite;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  top: 20%;
  right: 10%;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
  z-index: 0;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-30px); }
}

.login-card {
  width: 100%;
  max-width: 650rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 70rpx 50rpx;
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.25);
  position: relative;
  z-index: 1;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transform: translateY(0);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.login-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.3);
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 70rpx;
  animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 35rpx;
  border-radius: 50rpx;
  box-shadow: 0 15rpx 35rpx rgba(102, 126, 234, 0.3);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); box-shadow: 0 15rpx 35rpx rgba(102, 126, 234, 0.3); }
  50% { transform: scale(1.05); box-shadow: 0 20rpx 45rpx rgba(102, 126, 234, 0.4); }
  100% { transform: scale(1); box-shadow: 0 15rpx 35rpx rgba(102, 126, 234, 0.3); }
}

.app-name {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.app-slogan {
  font-size: 30rpx;
  color: #666;
  font-weight: 400;
}

/* 登录按钮区域 */
.login-section {
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out 0.2s both;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.login-btn:active::before {
  left: 100%;
}

.wechat-login {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  border: none;
  box-shadow: 0 10rpx 25rpx rgba(7, 193, 96, 0.3);
}

.wechat-login:active {
  transform: translateY(3rpx);
  box-shadow: 0 5rpx 15rpx rgba(7, 193, 96, 0.4);
}

.guest-login {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid #dee2e6;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05);
}

.guest-login:active {
  transform: translateY(3rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
  filter: brightness(0) invert(1);
}

.guest-login .btn-icon {
  filter: none;
}

.btn-text {
  font-size: 34rpx;
  font-weight: 600;
}

.divider {
  position: relative;
  text-align: center;
  margin: 45rpx 0;
}

.divider-text {
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  padding: 0 35rpx;
  color: #888;
  font-size: 28rpx;
  font-weight: 500;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #dee2e6, transparent);
  z-index: -1;
}

/* 功能说明 */
.features-section {
  margin-bottom: 50rpx;
  animation: fadeInUp 0.8s ease-out 0.4s both;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.feature-item:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.98);
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.feature-text {
  font-size: 28rpx;
  color: #555;
  font-weight: 500;
  line-height: 1.4;
}

/* 隐私协议 */
.privacy-section {
  text-align: center;
  animation: fadeInUp 0.8s ease-out 0.6s both;
}

.privacy-text {
  font-size: 26rpx;
  color: #888;
  margin-right: 12rpx;
  font-weight: 400;
}

.privacy-link {
  font-size: 26rpx;
  color: #667eea;
  text-decoration: underline;
  font-weight: 500;
  transition: all 0.2s ease;
}

.privacy-link:active {
  color: #764ba2;
}

/* 按钮禁用状态 */
button[disabled] {
  opacity: 0.6;
  transform: none !important;
  box-shadow: none !important;
}

/* 加载状态 */
button[loading] .btn-text {
  margin-left: 20rpx;
}

/* 响应式调整 */
@media (max-width: 768px) {
  .login-card {
    padding: 50rpx 30rpx;
    margin: 20rpx;
  }
  
  .logo {
    width: 150rpx;
    height: 150rpx;
  }
  
  .app-name {
    font-size: 44rpx;
  }
}