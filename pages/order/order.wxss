/* pages/order/order.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 未登录状态 */
.unlogin-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  padding: 40rpx;
  text-align: center;
}

.unlogin-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.unlogin-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 50rpx;
  font-weight: bold;
}

.login-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 45rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 订单内容 */
.order-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  position: relative;
}

.tab-item.active {
  color: #667eea;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background: #667eea;
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab-item.active .tab-text {
  font-weight: bold;
}

/* 订单列表区域 */
.order-list {
  flex: 1;
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-subtext {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.go-menu-btn {
  background: #667eea;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 订单项 */
.order-items {
  padding: 0 20rpx;
}

.order-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx dashed #eee;
}

.order-basic {
  flex: 1;
}

.order-number {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-pending {
  background: rgba(255, 107, 53, 0.1);
  color: #ff6b35;
}

.status-processing {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.status-completed {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.status-cancelled {
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
}

/* 桌台信息 */
.table-info {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx dashed #eee;
}

.table-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.table-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 商品列表 */
.order-dishes {
  margin-bottom: 25rpx;
  max-height: 200rpx;
  overflow: hidden;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.dish-item:last-child {
  margin-bottom: 0;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-info {
  display: flex;
  align-items: center;
}

.dish-price {
  font-size: 26rpx;
  color: #ff6b35;
  margin-right: 20rpx;
}

.dish-quantity {
  font-size: 26rpx;
  color: #666;
}

/* 订单金额 */
.order-amount {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 25rpx;
  padding-top: 25rpx;
  border-top: 1rpx dashed #eee;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
}

.action-btn.detail {
  background: white;
  color: #667eea;
  border-color: #667eea;
}

.action-btn.cancel {
  background: white;
  color: #ff6b35;
  border-color: #ff6b35;
}