/* pages/table/table.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  box-sizing: border-box;
}

.content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 未绑定状态 */
.unbind-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  color: white;
}

.header-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.scan-area {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  text-align: center;
}

.scan-placeholder {
  margin-bottom: 50rpx;
}

.scan-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.scan-text {
  font-size: 32rpx;
  color: #666;
}

.scan-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-btn.primary {
  background: #667eea;
  color: white;
  border: none;
}

.scan-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.tips {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  color: white;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 已绑定状态 */
.bind-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.success-card {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  text-align: center;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.success-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.table-info-card {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.status-text {
  font-weight: bold;
}

.status-green {
  color: #28a745;
}

.status-orange {
  color: #fd7e14;
}

.action-buttons {
  margin-bottom: 30rpx;
}

.action-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
}

.action-btn.primary {
  background: #667eea;
  color: white;
  border: none;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.notice {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.modal-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.modal-text:last-child {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}

.modal-btn.cancel {
  background: #f8f9fa;
  color: #666;
}

.modal-btn.confirm {
  background: #667eea;
  color: white;
}

/* 按钮禁用状态 */
button[disabled] {
  opacity: 0.6;
}

/* 加载状态 */
button[loading] {
  opacity: 0.8;
}